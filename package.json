{
  "name": "saas-packages",
  "version": "1.0.0",
  "description": "Personal Node.js TypeScript libraries for SaaS applications",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "type-check": "pnpm -r type-check",
    "publish-packages": "pnpm -r publish",
    "core": "pnpm --filter core",
    "db-mgr": "pnpm --filter database-manager",
    "mq-mgr": "pnpm --filter queue-manager"
  },
  "devDependencies": {
    "@types/node": "^20.19.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
