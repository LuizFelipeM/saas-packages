{
  "name": "@saas-packages/database-manager",
  "version": "1.2.0",
  "description": "Database manager for SaaS applications using Prisma (requires @prisma/client as peer dependency)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "echo \"No tests specified\" && exit 0",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@saas-packages/core": "workspace:*"
  },
  "peerDependencies": {
    "@prisma/client": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.4",
    "@prisma/client": "^5.22.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "database",
    "prisma",
    "orm",
    "saas"
  ],
  "author": "Luiz Felipe",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/luizfelipem/saas-packages.git",
    "directory": "packages/database-manager"
  },
  "publishConfig": {
    "access": "public"
  }
}